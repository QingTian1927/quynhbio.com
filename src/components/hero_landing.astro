---
import { Image } from "astro:assets";

const { heroImage, heroImageAlt } = Astro.props;
---

<div class="w-full h-[91.25%] flex items-center justify-center px-8">
	<div class="lg:w-4/5 flex items-center justify-center">
		<div class="w-full flex flex-col items-center justify-center">
			<div class="text-center">
				<h1 class="font-bold text-5xl lg:text-8xl mb-10">
					Become more <span class="text-red-300 dark:text-red-400">beautiful</span> <br> with Quỳnh Bio
				</h1>

				<p class="mb-10">
					Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do
					eiusmod tempor incididunt ut labore et dolore magnam aliquam
					quaerat.
				</p>
			</div>

			<div class="flex items-center justify-center">
				<a
					href="/shop"
					class="font-semibold leading-6 mr-4 inline-block py-2.5 px-4 rounded-md border-2 border-red-300 bg-red-300 hover:border-red-400 hover:bg-red-400 hover:text-stone-800 dark:bg-red-400 dark:text-stone-800 dark:border-red-400 dark:hover:border-red-200 dark:hover:bg-red-200 dark:hover:text-stone-800"
				>
					Shop Now
					<span aria-hidden="true">→</span>
				</a>

				<a
					href="/contact"
					class="mr-4 inline-block py-2.5 px-3.5 rounded-md border-2 border-stone-800 hover:bg-stone-800 hover:text-orange-100 dark:border-orange-100 dark:hover:bg-orange-100 dark:hover:text-stone-800"
				>
					Contact Us
				</a>
			</div>
		</div>

		<div class="hidden lg:w-1/2">
			<Image src={heroImage} alt={heroImageAlt} />
		</div>
	</div>
</div>
