---
import Accordion from "../shared/accordion.astro";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const translate = useTranslations(lang);

const { faqs } = Astro.props;
let index = 0;
---

<div class="w-full lg:mx-auto py-10 px-8 flex items-center justify-center">
	<div
		class="w-full px-3.5 lg:w-4/5 lg:mx-auto flex flex-col items-center justify-center text-center"
	>
		<h2 class="font-bold text-3xl xs:text-4xl lg:text-5xl py-10">
			{ translate('faqs.title') }
		</h2>

		<div class="w-full mb-6 flex flex-col items-center justify-center">
			{ faqs.map((faq: { question: string; answer: string; }) => (<Accordion question={faq.question} answer={faq.answer} index={index++} />)) }
		</div>
	</div>
</div>
