---
import { Image } from "astro:assets";
import { getLangFromUrl, useTranslations } from "../../i18n/utils";

const { heroImage, heroImageAlt } = Astro.props;
const lang = getLangFromUrl(Astro.url);
const translate = useTranslations(lang);
---

<div class="w-full h-[91.25%] flex items-center justify-center px-8">
	<div class="lg:w-4/5 flex items-center justify-center">
		<div class="w-full flex flex-col items-center justify-center">
			<div class="text-center">
				<h1 class="leading-relaxed font-bold text-4xl 2xs:text-5xl xs:text-6xl sm:text-7xl lg:text-8xl mb-10">
					{ translate('home.hero.title.firstHalf') } <span class="text-red-300 dark:text-red-400">{ translate('home.hero.title.beautiful') }</span> { translate('home.hero.title.preBreak') } <br> { translate('home.hero.title.secondHalf') }
				</h1>

				<p class="mb-10">
					{ translate('home.hero.subtitle') }
				</p>
			</div>

			<div class="flex items-center justify-center">
				<a
					href="/shop"
					class="font-semibold leading-6 mr-4 inline-block py-2.5 px-4 rounded-md border-2 border-red-300 bg-red-300 hover:border-red-400 hover:bg-red-400 hover:text-stone-800 dark:bg-red-400 dark:text-stone-800 dark:border-red-400 dark:hover:border-red-200 dark:hover:bg-red-200 dark:hover:text-stone-800"
				>
					{ translate('home.hero.shop-now') }
					<span aria-hidden="true">â†’</span>
				</a>

				<a
					href="/contact"
					class="font-semibold leading-6 mr-4 inline-block py-2.5 px-3.5 underline hover:text-red-400"
				>
					{ translate('home.hero.contact-us') }
				</a>
			</div>
		</div>

		<div class="hidden lg:w-1/2">
			<Image src={heroImage} alt={heroImageAlt} />
		</div>
	</div>
</div>
