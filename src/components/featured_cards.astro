---
import { Image } from "astro:assets";
import cardImage_1 from "../images/Bocchi_The_Scream.jpg"
import cardImage_2 from "../images/Yukito_Laughing.jpg"
import cardImage_3 from "../images/Nano_Drinking_Gas.jpg"
---

<div class="w-full px-8 flex items-center justify-center text-center bg-orange-200 dark:bg-stone-900">
    <div class="lg:w-4/5 flex flex-col items-center justify-center">
        <h2 class="font-bold text-2xl lg:text-5xl my-10">
            Featured Products
        </h2>

        <div class="mb-10 flex flex-col lg:flex-row items-center justify-center">
            <div class="h-1/3 w-full lg:size-1/3 pb-4 mx-4 mb-8 lg:mb-0 flex flex-col items-center justify-center rounded-3xl bg-orange-100 dark:bg-stone-700">
                <a href="shop/bocchi">
                    <div class="pb-2 flex items-center justify-center bg-contain bg-center">
                        <Image src={cardImage_1} alt="lmao" class="w-full aspect-square object-cover mb-2 rounded-t-3xl"/>
                    </div>
                    <div class="h-[50%]">
                        <p class="font-bold text-xl my-2">Bocchi the Scream</p>
                        <p class="my-2">69420$</p>
                    </div>
                </a>
            </div>

            <div class="h-1/3 w-full lg:size-1/3 pb-4 mx-4 mb-8 lg:mb-0 flex flex-col items-center justify-center rounded-3xl bg-orange-100 dark:bg-stone-700">
                <a href="shop/yukito">
                    <div class="pb-2 flex items-center justify-center bg-contain bg-center">
                        <Image src={cardImage_2} alt="lmao" class="w-full aspect-square object-cover mb-2 rounded-t-3xl"/>
                    </div>
                    <div class="h-[50%]">
                        <p class="font-bold text-xl my-2">Yukito Laughing at You Pathetic Nigerian</p>
                        <p class="my-2">$UR_MOM$</p>
                    </div>
                </a>
            </div>

            <div class="h-1/3 w-full lg:size-1/3 pb-4 mx-4 mb-8 lg:mb-0 flex flex-col items-center justify-center rounded-3xl bg-orange-100 dark:bg-stone-700">
                <a href="shop/nano">
                    <div class="pb-2 flex items-center justify-center bg-contain bg-center">
                        <Image src={cardImage_3} alt="lmao" class="w-full aspect-square object-cover mb-2 rounded-t-3xl"/>
                    </div>
                    <div class="h-[50%]">
                        <p class="font-bold text-xl my-2">Nano Drinking Gas</p>
                        <p class="my-2">10101$</p>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>