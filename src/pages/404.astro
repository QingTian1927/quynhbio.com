---
import Basehead from "../components/shared/basehead.astro";
import Navbar from "../components/shared/navbar.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const translate = useTranslations(lang);
---

<html lang="en">
    <head>
        <Basehead title="QuynhBio - 404" />
        <meta name="generator" content={Astro.generator} />
    </head>

    <body
        class="bg-orange-100 text-stone-800 dark:bg-stone-800 dark:text-orange-100"
    >
        <div class="w-full h-svh">
            <Navbar location="" />

            <div
                class="w-full h-[91.25%] px-8 py-10 flex items-center justify-center"
            >
                <header
                    class="lg:w-4/5 px-3.5 flex flex-col items-center justify-center text-center"
                >
                    <h1
                        class="font-bold text-9xl sm:text-[20vh] mb-10 text-red-300 dark:text-red-400"
                    >
                        !404!
                    </h1>
                    <p class="text-xl sm:text-2xl text-pretty mb-10">
                        { translate('404.subtitle') }
                    </p>

                    <div
                        class="flex flex-col sm:flex-row items-center justify-center mb-10"
                    >
                        <a
                            href="/"
                            class="py-2.5 px-3.5 mr-0 mb-4 sm:mr-4 sm:mb-0 leading-6 font-semibold text-sm sm:text-base rounded-md border-2 bg-red-300 border-red-300 hover:bg-red-400 hover:border-red-400 hover:text-stone-800 dark:bg-red-400 dark:text-stone-800 dark:border-red-400 dark:hover:border-red-200 dark:hover:bg-red-200 dark:hover:text-stone-800"
                            >{ translate('404.go-home') }</a
                        >
                        <a
                            href="/contact"
                            class="py-2.5 px-3.5 mr-0 mb-4 sm:mr-4 sm:mb-0 leading-6 font-semibold text-sm sm:text-base underline hover:text-red-400"
                            >{ translate('404.contact-us') }</a
                        >
                    </div>
                </header>
            </div>
        </div>
    </body>
</html>
